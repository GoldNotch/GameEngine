#version 450layout(location = 0) in mat4 instanceModel; // Per-instance model matrixlayout(binding = 0) uniform ViewProjUniformBlock{    mat4 view;    mat4 proj;} u_vp;const vec3 cubeVertices[8] = vec3[](    vec3(-0.5, -0.5, -0.5),    vec3( 0.5, -0.5, -0.5),    vec3( 0.5,  0.5, -0.5),    vec3(-0.5,  0.5, -0.5),    vec3(-0.5, -0.5,  0.5),    vec3( 0.5, -0.5,  0.5),    vec3( 0.5,  0.5,  0.5),    vec3(-0.5,  0.5,  0.5));const int cubeIndices[36] = int[](    0,1,2,  2,3,0,   // back    4,5,6,  6,7,4,   // front    0,4,7,  7,3,0,   // left    1,5,6,  6,2,1,   // right    3,2,6,  6,7,3,   // top    0,1,5,  5,4,0    // bottom);void main() {    int vertexIndex = cubeIndices[gl_VertexIndex];    vec3 localPos = cubeVertices[vertexIndex];    // Apply instance model transform    vec4 worldPos = instanceModel * vec4(localPos, 1.0);    gl_Position = u_vp.proj * u_vp.view * worldPos;}